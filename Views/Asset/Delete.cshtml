@using ItlaincenstmentApp.Core.Aplicationn.ViewModels.AssetViewModels
@model DeleteAssetViewModel
@{
    ViewData["Title"] = "AssetTypes Delete";
}

<div class="max-w-3xl mx-auto mt-10 bg-blue-800 dark:bg-gray-800 shadow-md rounded-2xl p-6">
    <h1 class="text-3xl font-extrabold text-gray-800 dark:text-white mb-6 flex items-center gap-2">
        <i data-lucide="layers" class="w-6 h-6 text-blue-500"></i>
        Asset Type Details
    </h1>

    <div class="space-y-4 text-sm text-gray-700 dark:text-gray-300">
        <div>
            <span class="font-semibold">Name:</span>
            <span>@Model.Name</span>
        </div>
    </div>

    <div class="mt-10 p-4 bg-red-100 dark:bg-red-800 rounded-lg border border-red-400 dark:border-red-600 text-red-900 dark:text-red-100">
        <p class="font-semibold text-lg mb-2">Are you sure you want to delete this asset type?</p>
        <p><strong>Name:</strong> @Model.Name</p>
    </div>

    <div class="mt-8 flex gap-4">
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
            <button type="submit"
                    class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md transition">
                Continue
            </button>
        </form>
        <a asp-action="Index"
           class="px-4 py-2 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-md transition">
            Cancel
        </a>
    </div>
</div>
